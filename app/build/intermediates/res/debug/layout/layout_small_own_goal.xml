<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_small_own_goal_root"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal" >

        <View
            android:id="@+id/layout_small_own_goal_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@color/color_primary_darker" />

        <TextView
            android:id="@+id/layout_small_own_goal_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="Going to a shop bla bla.."
            android:textColor="@color/color_primary" />

        <ImageView
            android:id="@+id/layout_small_own_goal_delete"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_goal_transparent"
            android:clickable="true"
            android:padding="15dp"
            android:src="@drawable/ic_delete_blue" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divider" />

</LinearLayout><!-- From: file:/C:/Users/Browsing/AndroidStudioProjects/LifeGoalsApp/app/src/main/res/layout/layout_small_own_goal.xml -->